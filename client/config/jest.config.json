{
  "rootDir": "..",
  "resetMocks": true,
  "moduleFileExtensions": [
    "js",
    "json",
    "vue"
  ],
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/src/$1"
  },
  "transform": {
    "^.+\\.js$": "babel-jest",
    ".*\\.(vue)$": "vue-jest"
  },
  "coverageThreshold": {
    "global": {
      "branches": 70,
      "functions": 70,
      "lines": 70,
      "statements": 70
    }
  },
  "snapshotSerializers": ["<rootDir>/node_modules/jest-serializer-vue"],
  "setupTestFrameworkScriptFile": "<rootDir>/config/jest.setup.js",
  "collectCoverageFrom": [
    "src/**/*.{js,vue}",
    "!src/main.js",
    "!src/env/window.js",
    "!src/env/process.js",
    "!**/node_modules/**"
  ]
}
