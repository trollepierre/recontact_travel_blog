{
  "rootDir": "..",
  "resetMocks": true,
  "testEnvironment": "jsdom",
  "moduleFileExtensions": [
    "js",
    "json",
    "vue"
  ],
  "watchman": false,
  "moduleNameMapper": {
    "^~/(.*)$": "<rootDir>/$1",
    "^~~/(.*)$": "<rootDir>/$1",
    "^@/(.*)$": "<rootDir>/$1"
  },
  "transform": {
    "^.+\\.js$": "babel-jest",
    ".*\\.(vue)$": "vue-jest"
  },
  "coverageThreshold": {
    "global": {
      "branches": 90,
      "functions": 80,
      "lines": 85,
      "statements": 85
    }
  },
  "snapshotSerializers": [
    "<rootDir>/node_modules/jest-serializer-vue"
  ],
  "setupFilesAfterEnv": [
    "<rootDir>/config/jest.setup.js"
  ],
  "collectCoverageFrom": [
    "<rootDir>/components/**/*.vue",
    "<rootDir>/pages/*.vue",
    "!<rootDir>/components/FeedbackModal/*.vue",
    "!<rootDir>/components/SubscribeModal/*.vue"
  ]
}
