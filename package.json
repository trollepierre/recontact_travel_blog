{
  "name": "recontact_travel_blog",
  "version": "1.0.0",
  "description": "Travel blog of Pierre Trollé",
  "author": "Pierre Trollé <pierre@recontact.me>",
  "scripts": {
    "install:client": "(cd client && yarn)",
    "install:server": "(cd server && yarn)",
    "install": "yarn install:client && yarn install:server",
    "build:client": "(cd client && yarn build)",
    "build:server": "(cd server && yarn build)",
    "build": "yarn build:server && yarn build:client",
    "clean:client": "(cd client && yarn clean)",
    "clean:server": "(cd server && yarn clean)",
    "clean": "yarn clean:client && yarn clean:server",
    "start:client": "(cd client && yarn start)",
    "start:dev": "(cd server && yarn start:dev)",
    "start": "(cd server && yarn start)",
    "test:client": "(cd client && npm test)",
    "test:server": "(cd server && npm test)",
    "test": "yarn test:client && yarn test:server",
    "lint:client": "(cd client && yarn lint)",
    "lintfix:client": "(cd client && yarn lint:fix)",
    "lint:server": "(cd server && yarn lint)",
    "lintfix:server": "(cd server && yarn lint:fix)",
    "lint": "yarn lint:client && yarn lint:server",
    "lint:fix": "yarn lintfix:client && yarn lintfix:server",
    "release": "./tools/release/release.sh",
    "lighthouse": "(cd tools/lighthouse && yarn) && (cd tools/lighthouse && yarn test)",
    "heroku-postbuild": "yarn build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/trollepierre/recontact_travel_blog.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/trollepierre/recontact_travel_blog/issues"
  },
  "homepage": "https://github.com/trollepierre/recontact_travel_blog#readme",
  "engines": {
    "yarn": ">=1.13.0",
    "node": "10.15.3"
  }
}
